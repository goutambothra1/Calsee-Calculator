<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/InputNumber"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/AnswerText"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="bottom|right"
        android:text=""
        android:textSize="44sp" />

    <LinearLayout
        android:id="@+id/Linear_layout_one"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_below="@id/AnswerText"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/inputNumber"
            android:layout_alignBottom="@id/inputNumber"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button3"
            android:layout_alignBottom="@id/button3"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_layout_two"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_below="@id/Linear_layout_one"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/inputNumber"
            android:layout_alignBottom="@id/inputNumber"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button3"
            android:layout_alignBottom="@id/button3"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="*"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_layout_three"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_below="@id/Linear_layout_two"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/button7"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/inputNumber"
            android:layout_alignBottom="@id/inputNumber"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button3"
            android:layout_alignBottom="@id/button3"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_layout_four"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_below="@id/Linear_layout_three"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/button_dot"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@+id/inputNumber"
            android:layout_alignBottom="@id/inputNumber"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="."
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button2"
            android:layout_alignBottom="@id/button2"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="="
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_below="@id/button3"
            android:layout_alignBottom="@id/button3"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#303030"
            app:iconPadding="8dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_clear"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/Linear_layout_four"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="-56dp"
        android:text="clear"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#303030" />


</RelativeLayout>



